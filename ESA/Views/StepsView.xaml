<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ESA.StepsView"
             xmlns:mrkupExt="clr-namespace:ESA.MarkupExtensions;assembly=ESA">
    <ContentView.Content>
        <!--Put whatever layout you need in here, this is just an example-->
        <ListView  x:Name="MyListView" Grid.Row="1" Margin="3,5,5,5" Header="Steps List"
         GroupDisplayBinding="{Binding Title}" HasUnevenRows="True" SeparatorVisibility="None" IsGroupingEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="250">
                        <Frame BorderColor="Black" CornerRadius="0" HasShadow="False" Padding="10,10,10,10">
                            <ScrollView>
                                <StackLayout>
                                    <Label TextColor="Green" VerticalTextAlignment="Start" Text="{Binding Description}"   />
                                </StackLayout>
                            </ScrollView>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell Height="50">
                        <Frame BorderColor="Black" CornerRadius="0" HasShadow="False" Padding="10,10,10,10">
                            <StackLayout>
                                <Label TextColor="Green" VerticalTextAlignment="Start" Text="{Binding Title}"   />
                                <Button HorizontalOptions="EndAndExpand" Image="{Binding StateIcon}" VerticalOptions="CenterAndExpand" BackgroundColor="Black" BorderColor="Transparent" BorderWidth="5"
                                        Clicked="HeaderTapped"  CommandParameter="{Binding .}" />
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
        </ListView>
    </ContentView.Content>
</ContentView>